    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter",
            "program": "lib/main.dart",
            "request": "launch",
            "type": "dart",
            "args": ["run", "--flavor", "dev", "--no-sound-null-safety"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PATH": "${workspaceFolder}/.fvm/flutter_sdk/bin:${env:PATH}"
            }
        },
        {
            "name": "solid-software-test (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "solid-software-test (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}